<%= form_for @article, html: { multipart: true } do |f| %>
    <% if @article.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

          <ul>
            <% @article.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="row">

      <div class="form-group col-lg-3" align="center">
        <%= f.label :title %><br>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group col-lg-1" align="center">
        <%= f.label :category %><br>
        <%= f.select(:category_id, Category.all.collect {|u| [u.name, u.id]}, :prompt => 'Select', class: "form-control") %>
      </div>

      <div class="form-group col-lg-8" align="center">
        <%= f.label :tag_list, "Tags (saperated by commas)" %><br>
        <%= f.text_field :tag_list, class: "form-control" %>
      </div>

    </div>

    <div class="row">
      <div class="form-group col-lg-8 col-lg-offset-2" align="center">
        <%= f.label :text, "Article Content" %><br>
        <%= f.text_area :text, class: "form-control", style: "height: 300px" %>
      </div>
    </div>

    <div class="row">
      <div class="form-group" align="center">
        <%= file_field_tag :image, class: "form-control-file" %>
      </div>
    </div>

    <div class="row">
      <div class="form-group" align="center">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>

    <div id="notifydiv">
      <p>
        Only a limited number of tags are allowed while editing the articles:<br/> like &lt;p&gt;, &lt;img&gt;, &lt;a href&gt;, &lt;div&gt; and some simple formatting tags.
      </p>
    </div>

<% end %>
