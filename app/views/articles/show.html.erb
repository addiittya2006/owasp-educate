<p align="center">
  <strong><%= @article.title %></strong>
</p>

<%= sanitize(@article.text, tags: %w(a img h1 h2 h3 b i u p div), attributes: %w(id src href class)) %>

<p>
  <strong>Related Pictures:</strong><br>
  <% @article.pictures.each do |picture| %>
      <%= link_to image_tag(picture.image.url(:low)), picture.image.url %>
  <% end %>
</p>