<div class="jmb container-fluid col-md-6 col-md-offset-3">

  <div class="jumbotron">
    <% if !params[:from].nil? && !params[:to].nil? %>
        <h1><%= @article.range_count(params[:from], params[:to]) %></h1>
    <% else %>
        <h1><%= @article.read_count %></h1>
    <% end %>
    <p>Read Count</p>
  </div>
</div>

<div class="jmb container-fluid col-md-6 col-md-offset-3">
  <div class="jumbotron">
    <% if !params[:from].nil? && !params[:to].nil? %>
        <h1><%= @article.unique_range_count(params[:from], params[:to]) %></h1>
    <% else %>
        <h1><%= @article.unique_read_count %></h1>
    <% end %>
    <p>Unique Read Count</p>
  </div>
</div>

<div id="filterdiv">
  <%= form_tag article_stats_path, method: :get do %>
      <h4 align="center">Filter Reads:</h4>
      <p>
        <%= label_tag 'From Date:' %>
        <br>
        <%= text_field_tag :from, nil, class: 'datepicker' %>
        <br>
        <%= label_tag 'To Date:' %>
        <br>
        <%= text_field_tag :to, nil, class: 'datepicker' %>
        <br>
      </p>
      <div align="center">
        <%= submit_tag 'Search', :name => nil, class: 'btn'%>
      </div>
  <% end %>
</div>
