<h2 class="form-signin-heading" align="center">Please sign in</h2>

<div class="container">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>

      <div class="row">
        <div class="field col-lg-6 col-lg-offset-3" align="center">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="field col-lg-6 col-lg-offset-3" align="center">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
      </div>

      <br><br>

      <div class="row">
        <div class="actions col-lg-6 col-lg-offset-3">
          <%= f.submit "Log in", class: "btn btn-lg btn-block" %>
        </div>
      </div>

  <% end %>

</div>

<br><br>

<%= render "devise/shared/links" %>
