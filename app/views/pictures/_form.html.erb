<%= form_for @picture, html: { multipart: true } do |f| %>

    <% if @picture.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

          <ul>
            <% @picture.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group" align="center">
      <%= f.label :image %><br>
      <%= f.file_field :image, required: true %>
    </div>

    <div class="form-group" align="center">
      <%= f.label :article %><br>
      <%= f.select(:article_id, Article.all.collect {|u| [u.title, u.id]}, :prompt => 'Select', :class => "form-control") %>
    </div>

    <div class="form-group" align="center">
      <%= f.submit class: "btn btn-primary" %>
    </div>

<% end %>
