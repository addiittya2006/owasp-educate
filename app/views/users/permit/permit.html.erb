<% unless @users_writer.count == 0 %>
    <h1 align="center">Listing Wannabe Writers</h1>
    <table class="table table-hover">

      <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Writer</th>
        <th colspan="1"></th>
      </tr>
      </thead>

      <tbody>

      <% @users_writer.each do |user| %>
          <%= form_for user do |f| %>
              <% if user.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
                    <ul>
                      <% user.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
              <% end %>

              <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= f.check_box :writer %></td>
                <td><%= f.submit %></td>
              </tr>
          <% end %>
      <% end %>
<% end %>

</tbody>

</table>

